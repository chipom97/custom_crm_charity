<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_crm_lead_form_custom" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.custom</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="/form/sheet/group/group/field[@name='partner_name']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="/form/sheet/group/group/field[@name='partner_id']" position="attributes">
				<attribute name="string">Surname</attribute>
            </xpath>

            <xpath expr="/form/sheet/notebook/page[@name='internal_notes']" position="after">
               <page name="donation_detail" string="Donation Details">
               </page>
               <page name="report_detail" string="Report Details">
               </page>
            </xpath>

        </field>
    </record>
</odoo>